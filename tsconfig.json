{
  "compilerOptions": {
    "target": "es2020", 
    "module": "ESNext",  
    "jsx": "react", 
    "sourceMap": true,
    "outDir": "dist",
    "strict": true, 
    "moduleResolution": "node",
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "types",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "@*": ["src*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
